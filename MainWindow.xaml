<Window x:Class="Gabriel_Graph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="750">
	<StackPanel Orientation="Vertical">
		<Canvas Width="700" Height="700" Margin="15 15 15 0" Name="Plane" />
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Content="Generate" Click="GenerateClick" Margin="5"/>
			<ToggleButton Name="ColorTrianglesButton" Content="Color Triangles" Click="ToggleButton_Click" Margin="5"/>
            <Button Content="Build Gabriel Graph" Click="BuildGabrielGraphClick" Margin="5"/>
		</StackPanel>
	</StackPanel>
</Window>
